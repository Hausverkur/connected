@model Connected.ViewModels.FrontPageViewModel

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<div>
    <h4>UserPost</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var p in Model.Posts)
        {

            <dt>
                @p.Id
            </dt>

            <dd>
                @p.Body
            </dd>
            foreach (var c in p.Comments)
            {
                @c.Body
                <br/>
            }
        }

    </dl>
</div>
<p>
</p>
