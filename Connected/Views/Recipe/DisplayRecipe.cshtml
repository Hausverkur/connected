@model Connected.ViewModels.RecipeViewModel

@{
    ViewBag.Title = "DisplayRecipe";
    <link href="~/Content/DisplayRecipe.css" rel="stylesheet" />
}

<h2>DisplayRecipe</h2>

<div class="RecipeArea">
    <h1 class="RecipeName">
        @Html.DisplayFor(model => model.Name)
    </h1>
    <div class="Image">
        @Html.DisplayFor(model => model.Image)
    </div>

    <p class="Description">
        <b class="DescriptionName">
            @Html.DisplayNameFor(model => model.Description)
        </b> <br/>
        @Html.DisplayFor(model => model.Description)
    </p>

    <p class="Ingredients">
        <b class="IngredientsName">
            @Html.DisplayNameFor(model => model.Ingredients)
        </b> <br/>
        @Html.DisplayFor(model => model.Ingredients)
    </p>

    <p class="Method">
        <b class="MethodName">
            @Html.DisplayNameFor(model => model.Method)
        </b> <br/>
        @Html.DisplayFor(model => model.Method)
    </p>

    <p class="Date">
        Posted on: @Html.DisplayFor(model => model.DateTimePosted)
    </p>
</div>
    <p class="Likes">
        <input type="button" name="btnLike" value="Like" class="glyphicon glyphicon-thumbs-up" />
        <b>
            @Html.DisplayNameFor(model => model.Likes)
        </b>
        @Html.DisplayFor(model => model.Likes)

        <input type="button" name="btnDislike" value="Dislike" class="glyphicon glyphicon-thumbs-down" />
        <b>
            @Html.DisplayNameFor(model => model.Dislikes)
        </b>
        @Html.DisplayFor(model => model.Dislikes)

        <a>Comment</a> <a>Shares</a>

    </p>


<div>
    @Html.ActionLink("Back to List", "ListOfRecipes")
</div>

<!--Hér að neðan viljum við laga comments (description -> Comments.Body) -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })<!--Body-->
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })<!--Body-->
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })<!--Body-->
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Comment" class="btn btn-default"/>
        </div>
    </div>
}

<p class="Comment">
    <b class="CommentName">
        @Html.DisplayNameFor(model => model.Description) <!--Body-->
    </b> <br />
    @Html.DisplayFor(model => model.Description) <!--Body-->
</p>