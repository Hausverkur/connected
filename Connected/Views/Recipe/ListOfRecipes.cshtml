@using System.Web.Mvc.Html
@model IEnumerable<Connected.ViewModels.RecipeViewModel>

@{
    ViewBag.Title = "ListOfRecipes";    
    <link href="~/Content/ListOfRecipes.css" rel="stylesheet" />
}

<h2>ListOfRecipes</h2>

<button class="create">

    @Html.ActionLink("Create Recipe", "CreateRecipe")

</button>
                      <div class="RecipeArea">
                          @foreach (var item in Model)
                          {
                              
                                  <h3 class="RecipeName">
                                      @Html.ActionLink(item.Name, "DisplayRecipe", new {id = item.Id})
                                  </h3>
                                  <div class="Image">
                                      <img src=@item.Image height="70px"alt="Logo" />
                                      <!--Html.DisplayFor(modelItem => item.Image)-->
                                  </div>
                              <p class="Description">
                                  @Html.DisplayFor(modelItem => item.Description)
                              </p>

                          }
                      </div>
                        