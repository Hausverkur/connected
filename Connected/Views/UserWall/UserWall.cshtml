@using System.Web.UI.WebControls
@model Connected.ViewModels.UserWallViewModel

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<div>
    <h4>UserPost</h4>
    <dl class="dl-horizontal">
        @foreach (var p in Model.Posts)
        {
            <p>@p.Author.UserName</p>
            <dt>
                @p.Id
            </dt>

            <dd>
                @p.Body
            </dd>
            foreach (var c in p.Comments)
            {
                @c.Body
                <br />
            }
        }

    </dl>
</div>
<div>
    <h4>UserInfo</h4>
    <dl class="dl-horizontal">
        <p>Name: @Model.User.Age </p>
        <p>Age: @Model.User.Description </p>
        <p>Id: @Model.User.Id </p>
        <p>Name: @Model.User.UserName </p>
        <p>Name: @Model.User.Email </p>
    </dl>
</div>
<div>
    <h4>Friends</h4>
    <dl class="dl-horizontal">
        @foreach (var f in Model.Friends)
        {
            <p>Age: @f.Age</p>
            <p>UserName: @f.UserName</p>
            <p>UserID: @f.Id</p>
            <p>E-mail: @f.Email</p>
            <p>Description: @f.Description</p>
            <p>Gender: @f.Gender</p>
            <p>ProfilePicture: @f.ProfilePicture</p>
        }

    </dl>
</div>
<p>
</p>



