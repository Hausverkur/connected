<!--TO CHANGE THE GENERAL LAYOUT OF THE WEBSITE GOTO
~\connected\Connected\Content AND CHANGE IT IN SITE
ALWAYS ADD !important AFTER EACH CHANGE I.E. border-color: #777777 !important; 
    SO THE WEBSITE WILL CHANGE-->


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Connected?</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
 
</head>
<body>
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="../../Images/Logo.png" height="70px" width="70px" class="navbar-logo" alt="Logo"/></a>

                @Html.ActionLink("Connected?", "Index", "Home", new { area = "" }, new { @class = "navbar-title" })

            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li >@Html.ActionLink("Home", "FrontPage", "Home", new { area = "" }, new { @class = "navbar-brand" }) </li>                   
                    <li >@Html.ActionLink("MyWall", "MyWall", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("Messages", "Messages", "Message", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("Groups", "ListOfGroups", "Group", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("Recipes", "ListOfRecipes", "Recipe", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("Search", "Search", "Search", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Connected</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
