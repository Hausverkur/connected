@using System.Activities.Expressions
@model Connected.ViewModels.GroupListViewModel

@{
    ViewBag.Title = "ListOfGroups";
    <link href="~/Content/ListOfGroup.css" rel="stylesheet" />

}

<h2>ListOfGroups</h2>
    <br />
<button class="Create">
    @Html.ActionLink("Create Group", "CreateGroup")
</button>
<div class="GroupArea">
    @foreach (var item in Model.ListOfAllGroups)
    {

        <h3 class="GroupName">

            @Html.ActionLink(item.Name, "DisplayGroup", new {id = item.Id})

        </h3>
        <div>
            <img src="../../Images/Group.png" class="Image" alt="Logo"/>
            <!--Html.DisplayFor(modelItem => item.Image)-->
        </div>
        <p class="Description">
            @Html.DisplayFor(modelItem => item.Description)
        </p>

        <p class="Users">
            <b>
                Number Of Users:
            </b>
            @Html.DisplayFor(modelItem => item.NumberOfUsers)

        </p>
        <br/>
    }
</div>
    <h2>ListOfMyGroups</h2>

    <div class="GroupArea">
        @foreach (var item in Model.MyGroups)
        {

            <h3 class="GroupName">

                @Html.ActionLink(item.Name, "DisplayGroup", new { id = item.Id })

            </h3>
            <div>
                <img src="../../Images/Group.png" class="Image" alt="Logo" />
                <!--Html.DisplayFor(modelItem => item.Image)-->
            </div>
            <p class="Description">
                @Html.DisplayFor(modelItem => item.Description)
            </p>

            <p class="Users">
                <b>
                    Number Of Users:
                </b>
                @Html.DisplayFor(modelItem => item.NumberOfUsers)

                @Html.ActionLink("Leave", "RemoveGroupMember", new { id = item.Id })

            </p>
            <br />
        }
    </div>
